<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Classes.Class_Management">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/cpViewToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"/>

    <LinearLayout
        android:id="@+id/cplinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/list_item_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpViewToolbar">

        <TextView
            android:id="@+id/cpViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:text="Class 1"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cpViewToolbar" />

        <TextView
            android:id="@+id/cpCounterLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:text="Class..."
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cpViewTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cpadd_members"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="+"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="216dp" />

            <Button
                android:id="@+id/cpadd_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create flashlet"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="216dp" />

            <Button
                android:id="@+id/cpadd_edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="216dp" />

            <Button
                android:id="@+id/cpadd_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="216dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>